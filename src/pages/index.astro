---
import { published } from "@data/post"
import Blog from "@layouts/blog";
import Preview from "@components/blog/preview";

const markdownFiles = await Astro.glob('../content/**/*.md')
const posts = published( markdownFiles );
---

<Blog>
	<div>
		{posts.map((p) => <Preview post={p} />)}
	</div>
</Blog>

<title>Galacticraft</title>
<meta content="News - Galacticraft" property="og:title" />
<meta content="Read the latest dev blogs from the Galacticraft Team." property="og:description" />
<meta content="https://galacticraft-test.netlify.app" property="og:url" />
<meta content="https://cdn.discordapp.com/attachments/804625345718255656/944660077443432448/Rocket.png" property="og:image" />
